# ═══════════════════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Vercel Postgres (Production)
# Get these from: Vercel Dashboard → Storage → Create Database → Postgres
DATABASE_URL="postgres://default:xxxxx@ep-xxx.us-east-1.postgres.vercel-storage.com:5432/verceldb?sslmode=require"
POSTGRES_PRISMA_URL="postgres://default:xxxxx@ep-xxx.us-east-1.postgres.vercel-storage.com:5432/verceldb?sslmode=require&pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgres://default:xxxxx@ep-xxx.us-east-1.postgres.vercel-storage.com:5432/verceldb?sslmode=require"

# Local Development (Alternative)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/ga_biology_dev"

# ═══════════════════════════════════════════════════════════════════════════════
# AUTHENTICATION
# ═══════════════════════════════════════════════════════════════════════════════

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"

# Your deployment URL (update for production)
NEXTAUTH_URL="http://localhost:3000"

# ═══════════════════════════════════════════════════════════════════════════════
# FILE STORAGE
# ═══════════════════════════════════════════════════════════════════════════════

# Vercel Blob
# Get from: Vercel Dashboard → Storage → Create Store → Blob
BLOB_READ_WRITE_TOKEN="vercel_blob_xxxxx"

# ═══════════════════════════════════════════════════════════════════════════════
# PSYCHOMETRICS SERVICE
# ═══════════════════════════════════════════════════════════════════════════════

# Railway deployment URL (set after deploying psychometrics service)
PSYCHOMETRICS_API_URL="https://your-service.railway.app"

# Generate API key for service-to-service auth
PSYCHOMETRICS_API_KEY="your-generated-api-key"

# ═══════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS - INTEGRATIONS (All disabled by default)
# ═══════════════════════════════════════════════════════════════════════════════

# SSO Providers (enable when approved by district IT)
ENABLE_CLEVER_SSO="false"
ENABLE_CLASSLINK_SSO="false"
ENABLE_GOOGLE_SSO="false"
ENABLE_MICROSOFT_SSO="false"

# LMS Integrations
ENABLE_CANVAS_SYNC="false"
ENABLE_SCHOOLOGY_SYNC="false"
ENABLE_GOOGLE_CLASSROOM="false"

# SIS Integration
ENABLE_SIS_SYNC="false"
ENABLE_ONEROSTER="false"

# Grade Passback
ENABLE_GRADE_PASSBACK="false"

# Advanced Features (enable in Phase 2-3)
ENABLE_CAT="false"
ENABLE_PREDICTIONS="false"
ENABLE_CDM="false"

# ═══════════════════════════════════════════════════════════════════════════════
# OPTIONAL: SSO PROVIDER CREDENTIALS (Only if enabled above)
# ═══════════════════════════════════════════════════════════════════════════════

# Clever SSO
# Register at: https://dev.clever.com/
# CLEVER_CLIENT_ID=""
# CLEVER_CLIENT_SECRET=""

# ClassLink SSO
# Register at: https://developer.classlink.com/
# CLASSLINK_CLIENT_ID=""
# CLASSLINK_CLIENT_SECRET=""

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ═══════════════════════════════════════════════════════════════════════════════
# OPTIONAL: REAL-TIME FEATURES
# ═══════════════════════════════════════════════════════════════════════════════

# Pusher (for live dashboards)
# Get from: https://pusher.com/
# PUSHER_APP_ID=""
# PUSHER_KEY=""
# PUSHER_SECRET=""
# PUSHER_CLUSTER=""

# ═══════════════════════════════════════════════════════════════════════════════
# DEVELOPMENT SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

NODE_ENV="development"

# Enable detailed logging in development
LOG_LEVEL="debug"
